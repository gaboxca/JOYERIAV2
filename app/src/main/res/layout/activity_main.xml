<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context="com.example1.joyeriav2.MainActivity">

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical|center"
        android:text="METAL y LIGA"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="96dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="106dp"
        android:layout_height="27dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="76dp"
        android:text="Peso Cera"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="64dp" />

    <EditText
        android:id="@+id/et_peso"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="Gramos"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="MATERIAL"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="20dp" />

    <RadioGroup
        android:id="@+id/rg_material"
        android:layout_width="206dp"
        android:layout_height="32dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_peso"
        android:layout_marginLeft="144dp">

        <RadioButton
            android:id="@+id/rb_oro"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="ORO"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="151dp" />

        <RadioButton
            android:id="@+id/rb_plata"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PLATA"
            android:textSize="20sp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_oro"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/rg_material"
        android:layout_marginLeft="16dp">

        <RadioButton
            android:id="@+id/rb_24"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:text="24 ct"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="151dp" />

        <RadioButton
            android:id="@+id/rb_18"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:text="18 ct"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="151dp" />

        <RadioButton
            android:id="@+id/rb_14"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="14 ct" />

    </RadioGroup>


    <RadioGroup
        android:id="@+id/rg_plata"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/rg_material"
        android:layout_marginLeft="48dp">

        <RadioButton
            android:id="@+id/rb_925"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:text="925"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="151dp" />

        <RadioButton
            android:id="@+id/rb_950"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:text="950"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="151dp" />

    </RadioGroup>




    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:text="LEY"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="60dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="Material Necesario"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="117dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:elevation="10dp"
        android:gravity="center"
        android:hint="Gramos"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/tv_Material"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="24dp"
        android:text="Material"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginLeft="112dp" />

    <TextView
        android:id="@+id/tv_puro"
        android:layout_width="117dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:elevation="10dp"
        android:gravity="center"
        android:hint="Gramos"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/tv_Material"
        app:layout_constraintTop_toBottomOf="@+id/tv_total"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="24dp"
        android:text="Cobre: "
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Material"
        android:layout_marginLeft="120dp" />

    <TextView
        android:id="@+id/tv_cobre"
        android:layout_width="117dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:gravity="center"
        android:hint="Gramos"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/tv_puro"
        android:layout_marginLeft="24dp" />

    <Button
        android:id="@+id/btn_cal"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_dark"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="calcula"
        android:text="CALCULAR"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="116dp"
        android:layout_height="27dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="24dp"
        android:text="Empuje: "
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginLeft="76dp" />

    <Spinner
        android:id="@+id/spr_ena"
        android:layout_width="95dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:elevation="@android:dimen/app_icon_size"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/rg_plata"
        android:layout_marginLeft="16dp" />

</android.support.constraint.ConstraintLayout>
